@model BushingView

@{
    ViewData["Title"] = "Bushing";
    var name = (string)ViewData["Name"];
}


<h3>Втулка</h3>
<div class=" img-fluid">
    <img src="~/images/Втулка.png" width="550" height="350" />
</div>
<br />
<table class="table table-bordered">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ColumnDiametr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PressedDiametr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlangeDiametr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalHeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepthHeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountBushing)
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>

        <tr>

            <td>
                @Html.DisplayFor(modelItem => modelItem.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.ColumnDiametr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.PressedDiametr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.FlangeDiametr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.TotalHeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.DepthHeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.AmountBushing)
            </td>
            <td>
                @{ // Получение текущего адреса
                    var request = ViewContext.HttpContext.Request;
                    var returnUrl = request.Path + request.QueryString.ToUriComponent();

                }
                <a class="btn btn-outline-info" asp-controller="Bushings" asp-action="ChooseBushing" asp-route-diametr="@Model.ColumnDiametr" asp-route-oldId="@Model.Id" asp-route-url="@returnUrl"><span class="fas fa-edit"></span></a>

            </td>

        </tr>

    </tbody>
</table>
<div class="row">

    <a class="col-md-4 offset-md-4 btn btn-secondary" asp-controller="Stamps" asp-action="GetStamp" asp-route-stampName="@name"> Вернутся к штампу</a>

</div>