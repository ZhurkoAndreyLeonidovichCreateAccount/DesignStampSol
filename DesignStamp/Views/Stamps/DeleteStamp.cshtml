@model DataLayer.Entities.Stamp

@{
    ViewData["Title"] = "DeleteStamp";
    string url = (string)ViewData["Url"] ?? "#";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить штамп?</h3>
<div>
    <h4>Штамп</h4>
    <hr />


    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.detailName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.detailName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClosedHeight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClosedHeight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.press.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.press.Name)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-controller="Stamps">
        <input type="hidden" asp-for="Name" />
        <input type="submit" value="Удаление" class="btn btn-danger" />
        <br />
        <br />
        <a class="btn btn-secondary" href="@url">Назад </a>
    </form>
</div>
