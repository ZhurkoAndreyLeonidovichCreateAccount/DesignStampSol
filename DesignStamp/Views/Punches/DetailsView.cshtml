@model PunchView

@{
    ViewData["Title"] = "Punch";
    var name = (string)ViewData["Name"];
}


<h3>Пуансон</h3>
<div class=" img-fluid">
    <img src="~/images/Пуансон.png" width="300" height="370" />
</div>
<br />
<table class="table table-bordered">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiametrHole)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiametrSeat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiametrFlange)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeightTottal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeighSeat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeighFlange)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeightHole)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        <tr>

            <td>
                @Html.DisplayFor(modelItem => modelItem.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.DiametrHole)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.DiametrSeat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.DiametrFlange)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.HeightTottal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.HeighSeat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.HeighFlange)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.HeightHole)
            </td>
            <td>
                @{ // Получение текущего адреса
                    var request = ViewContext.HttpContext.Request;
                    var returnUrl = request.Path + request.QueryString.ToUriComponent();

                }
                <a class="btn btn-outline-info" asp-controller="Punches" asp-action="ChoosePunch" asp-route-diametr="@Model.DiametrHole" asp-route-oldId="@Model.Id" asp-route-url="@returnUrl"><span class="fas fa-edit"></span></a>
            </td>
        </tr>

    </tbody>
</table>

<div class="row">

    <a class="col-md-4 offset-md-4 btn btn-secondary" asp-controller="Stamps" asp-action="GetStamp" asp-route-stampName="@name"> Вернутся к штампу</a>

</div>
