@model DataLayer.Entities.Column

@{
    ViewData["Title"] = "Create";
}

<h1>Создание</h1>

<h4>Колонка</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diametr" class="control-label"></label>
                <input asp-for="Diametr" class="form-control" placeholder="25-100" />
                <span asp-validation-for="Diametr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" placeholder="120-560"/>
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeightDepth" class="control-label"></label>
                <input asp-for="HeightDepth" class="form-control" placeholder="36-160" />
                <span asp-validation-for="HeightDepth" class="text-danger"></span>
            </div>
            <div class="row">
                <input type="submit" value="Создать" class="col-md-4 btn btn-secondary" />
                <a class="col-md-5 offset-md-3 btn btn-secondary" asp-action="Index">Назад к списку </a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
