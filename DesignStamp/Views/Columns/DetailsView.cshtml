@model ColumnView

@{
    ViewData["Title"] = "Column";
    var name = (string)ViewData["Name"];
}


<h3>Колонка</h3>
<div class=" img-fluid">
    <img src="~/images/Колонка.png" width="270" height="450"/>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diametr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeightDepth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountColumn)
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>

        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => modelItem.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Diametr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.HeightDepth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.AmountColumn)
            </td>
            <td>
                @{ // Получение текущего адреса
                    var request = ViewContext.HttpContext.Request;
                    var returnUrl = request.Path + request.QueryString.ToUriComponent();

                }
                <a class="btn btn-outline-info" asp-controller="Columns" asp-action="ChooseColumn" asp-route-diametr="@Model.Diametr" asp-route-oldId="@Model.Id" asp-route-url="@returnUrl"><span class="fas fa-edit"></span></a>

            </td>

        </tr>

    </tbody>
</table>
<div class="row">

    <a class="col-md-4 offset-md-4 btn btn-secondary" asp-controller="Stamps" asp-action="GetStamp" asp-route-stampName="@name"> Вернутся к штампу</a>

</div>