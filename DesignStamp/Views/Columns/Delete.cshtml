@model DataLayer.Entities.Column

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить колонку?</h3>
<div>
    <h4>Колонка</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Diametr)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Diametr)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Height)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Height)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HeightDepth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HeightDepth)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удаление" class="btn btn-danger" /> 
        <br />
        <br />
        <a class="btn btn-secondary" asp-action="Index">Назад к списку</a>
    </form>
</div>
