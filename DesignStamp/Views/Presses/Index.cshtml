@model IEnumerable<DataLayer.Entities.Press>

@{
    ViewData["Title"] = "Index";
}

<h1>Пресса</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create"><span class="fas fa-folder-plus"></span></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ppress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PressRamStroke)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LengthAdapt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WidthAdapt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ppress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PressRamStroke)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LengthAdapt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WidthAdapt)
            </td>
            <td>
                <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.Id"><span class="fas fa-edit"></span></a>
                <a class="btn btn-outline-success" asp-action="Details" asp-route-id="@item.Id"><span class="fas fa-info"></span></a>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><span class="fas fa-trash-alt"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
<a class="col-md-3 offset-md-4 btn btn-secondary" asp-controller="Admin">
    Назад к администрированию
</a>