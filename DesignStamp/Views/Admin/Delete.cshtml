@model ApplicationUser 

@{
    ViewData["Title"] = "Delete";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AvatarImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>

            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        
            <tr>
                <td>
                    <img img-action="GetAvatar"
                         img-controller="Image"
                         img-name="@Model.UserName"
                         width="30" alt="User"
                         class="rounded bg-light" />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => Model.UserName)
                </td>

                <td>
                    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Удаление" class="btn btn-danger" />
                        <br />
                        <br />
                        <a class="btn btn-secondary" asp-action="GetAllUsers">Назад к списку</a>
                    </form>
                </td>
            </tr>
        
    </tbody>
</table>